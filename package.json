{
  "name": "node-service-template",
  "version": "1.0.0",
  "description": "functions with dependency injection",
  "license": "MIT",
  "author": "Mel C",
  "scripts": {
    "start": "yarn build && yarn nodemon",
    "build": "yarn lint && tsc -p ./tsconfig.build.json",
    "test": "jest --coverage",
    "test:app": "jest local-endpoint-tests",
    "test:watch": "jest --watch",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint -c .eslintrc.json --ext .ts '{src,test-integration}/**/*.ts'",
    "lint:fix": "yarn lint:eslint --fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.4.7",
    "prettier": "^2.8.8",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "4.2.2"
  },
  "dependencies": {
    "async_hooks": "^1.0.0",
    "axios": "^0.21.4",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.22",
    "uuid": "^9.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/__generated__/routes.ts"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "resolveJsonModule": true
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testEnvironmentOptions": {
      "url": "http://localhost"
    }
  }
}
